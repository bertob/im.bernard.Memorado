{
    "id" : "im.bernard.Memorado",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "45",
    "sdk" : "org.gnome.Sdk",
    "command" : "memorado",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.8.1"
                }
        	]
        },
        {
            "name" : "memorado",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : ["-Dprofile=development"],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/wbernard/Memorado.git",
                    "tag" : "0.1",
                    "commit" : "f5f9b1770feefaf003994328ce2b7e4483071fc7"
                }
            ]
        }
    ]
}
